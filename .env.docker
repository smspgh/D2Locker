# Docker-specific environment variables
# Copy this file to .env when running in Docker

# API Configuration
API_KEY=${API_KEY}
WEB_API_KEY=${WEB_API_KEY}
D2L_API_KEY=${D2L_API_KEY}

# Bungie API Configuration
BUNGIE_API_KEY=${BUNGIE_API_KEY}
BUNGIE_CLIENT_ID=${BUNGIE_CLIENT_ID}
BUNGIE_CLIENT_SECRET=${BUNGIE_CLIENT_SECRET}

# Server Configuration
NODE_ENV=production
PORT=443
API_PORT=3000

# SSL Configuration (mounted from host)
SSL_CERT_PATH=/app/certs/shirezaks.com+2.pem
SSL_KEY_PATH=/app/certs/shirezaks.com+2-key.pem

# Database Configuration
DB_PATH=/app/backend/db/d2l.db

# CORS Configuration
CORS_ORIGIN=https://localhost,https://www.shirezaks.com

# Monitoring (when enabled)
ENABLE_MONITORING=${ENABLE_MONITORING:-false}

# Docker-specific
DOCKER=true